<h1>Books</h1>

<table>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= image_tag(book.cover_thumbnail) %></td>
    <td><%= book.title %></td>
    <td>
      <%= @description = book.description %>
      <%= raw @description %>
    </td>
    <td><%= link_to 'Show', book %></td>
    <td>
      <% @user = current_user %>
      <%= form_tag("/books/" + book.id.to_s  + "/add", :method => "post") do %>
	<%= hidden_field(:book, :value => book.id) %>
	<%= submit_tag("Add") %>
      <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path %>
